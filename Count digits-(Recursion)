// count the number of digits in the given n using recursion 

class Main {
    public static void main(String[] args) {
        int n =353445;
        System.out.println(fun(n));
    }
    public static int fun(int n){
        if(n == 0) {
            return 0;
        }
        else{
            return 1+fun(n/10);
        }

    }
}
